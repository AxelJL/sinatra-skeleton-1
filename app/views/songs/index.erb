<% @songs.each do |song| %>
  <div class="song">
    <h3><a href="/songs/<%= song.id %>"><%= song.song_title %></a></h3>
    <small>Posted by: <%=song.author %> on <%= song.created_at%></small>
    <br>
    <form method="PUT" action="/likes">
    <input type="hidden" name="<% song.id %>" value="PUT">
    <input type="submit" value="Like">
    </form>
    <!-- <input type="submit" value="Dislike"> -->
  </div>
<% end %>
<br>
<a href="/songs/new">Think you're a music guru? Post a song of your own!</a>
